<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.agarwalprachi.quiz.DISPLAY_PAPER_CODE"
    android:background="@drawable/quiz26">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Paper code"
        android:id="@+id/txt1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt2"
        android:layout_below="@+id/txt1"
        android:layout_alignParentStart="true"
        android:hint="Enter paper code" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Complete Paper"
        android:id="@+id/b1"
        android:layout_below="@+id/txt2"
        android:layout_alignParentStart="true"
        android:onClick="OnDisplayComplete1Paper" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 Question"
        android:id="@+id/b2"
        android:layout_below="@+id/txt2"
        android:layout_alignParentEnd="true"
        android:onClick="OnDisplay1Question" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Enter Question No. of Question to be displayed"
        android:id="@+id/txt3"
        android:layout_below="@+id/b1"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt4"
        android:layout_below="@+id/txt3"
        android:layout_alignParentStart="true"
        android:hint="Enter Question No." />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Display"
        android:id="@+id/b3"
        android:layout_below="@+id/txt4"
        android:layout_centerHorizontal="true"
        android:onClick="OnDisplay" />

</RelativeLayout>
