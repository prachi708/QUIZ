<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.agarwalprachi.quiz.ADD_QUESTION"
    android:background="@drawable/quiz25">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imb1"
        android:background="@drawable/fwd3"
        android:onClick="OnAdd"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt2"
        android:maxLength="400"
        android:maxWidth="420dp"
        android:minHeight="180dp"
        android:minWidth="420dp"
        android:hint="Enter Question"
        android:maxHeight="180dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txt1"
        android:layout_alignParentLeft="true"
        android:linksClickable="false"
        android:height="180dp"
        android:background="@drawable/abc_list_selector_disabled_holo_light" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Type Question"
        android:id="@+id/txt1"
        android:textColor="#ff0f15ff"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Enter Options"
        android:id="@+id/txt3"
        android:textColor="#ff0f15ff"
        android:layout_below="@+id/txt2"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="130dp"
        android:layout_height="45dp"
        android:id="@+id/txt4"
        android:hint="Enter option 1"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txt3"
        android:layout_alignParentLeft="true"
        android:background="@drawable/abc_list_selector_disabled_holo_light"
        android:singleLine="false"
        android:inputType="textAutoCorrect" />

    <EditText
        android:layout_width="130dp"
        android:layout_height="45dp"
        android:id="@+id/txt5"
        android:hint="Enter option 2"
        android:background="@drawable/abc_list_selector_disabled_holo_light"
        android:layout_alignTop="@+id/txt4"
        android:layout_alignEnd="@+id/txt2"
        android:singleLine="false"
        android:inputType="textAutoCorrect" />

    <EditText
        android:layout_width="130dp"
        android:layout_height="45dp"
        android:id="@+id/txt7"
        android:hint="Enter option 4"
        android:layout_below="@+id/txt5"
        android:layout_alignStart="@+id/txt5"
        android:background="@drawable/abc_list_selector_disabled_holo_light"
        android:singleLine="false"
        android:inputType="textAutoCorrect" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:id="@+id/txt9"
        android:hint="Correct Option"
        android:background="@drawable/abc_list_selector_disabled_holo_light"
        android:layout_below="@+id/txt8"
        android:layout_alignParentStart="true"
        android:singleLine="false" />

    <EditText
        android:layout_width="130dp"
        android:layout_height="45dp"
        android:id="@+id/txt6"
        android:hint="Enter option 3"
        android:background="@drawable/abc_list_selector_disabled_holo_light"
        android:layout_below="@+id/txt4"
        android:layout_alignParentStart="true"
        android:singleLine="false"
        android:inputType="textAutoCorrect" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Correct Option"
        android:id="@+id/txt8"
        android:textColor="#ff0f15ff"
        android:layout_below="@+id/txt7"
        android:layout_alignParentStart="true" />

</RelativeLayout>
