<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.agarwalprachi.quiz.DELETE_QUESTION"
    android:background="@drawable/quiz26">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Enter paper code"
        android:id="@+id/txt1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt2"
        android:layout_below="@+id/txt1"
        android:layout_alignParentStart="true"
        android:hint="Enter paper code" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Do you want to delete complete paper or 1 question"
        android:id="@+id/txt3"
        android:layout_below="@+id/txt2"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Complete paper"
        android:id="@+id/b1"
        android:layout_below="@+id/txt3"
        android:layout_alignParentStart="true"
        android:maxWidth="160dp"
        android:onClick="OnCompletePaperDelete" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 Question"
        android:id="@+id/b2"
        android:layout_alignTop="@+id/b1"
        android:layout_alignEnd="@+id/txt3"
        android:maxWidth="160dp"
        android:onClick="OnOneQuestionDelete" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Enter Question Number"
        android:id="@+id/txt4"
        android:layout_below="@+id/b1"
        android:layout_alignParentStart="true"
        android:layout_marginTop="53dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt5"
        android:hint="Question Number"
        android:layout_below="@+id/txt4"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:id="@+id/b3"
        android:layout_below="@+id/txt5"
        android:layout_centerHorizontal="true"
        android:onClick="OnDelete" />
</RelativeLayout>
