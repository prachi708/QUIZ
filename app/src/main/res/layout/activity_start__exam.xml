<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.agarwalprachi.quiz.START_EXAM"
    android:id="@+id/aaa">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt2"
        android:hint="Question"
        android:height="150dp"
        android:minWidth="400dp"
        android:layout_below="@+id/txt1"
        android:layout_alignParentStart="true"
        android:editable="false"
        android:clickable="false"
        android:textIsSelectable="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next Question"
        android:id="@+id/b1"
        android:onClick="Questions"
        android:layout_alignTop="@+id/b2"
        android:layout_alignEnd="@+id/txt2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt1"
        android:hint="Question no."
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:editable="false" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toStartOf="@+id/b1"

        android:id="@+id/rg1"
        android:layout_below="@+id/txt2"
        android:layout_alignEnd="@+id/txt1"
        android:layout_above="@+id/b1">

    <RadioButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rb1"
        android:checked="false"
        android:hint="option 1"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <RadioButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rb2"
        android:checked="false"
        android:hint="Option 2"
        android:layout_below="@+id/rb1"
        android:layout_alignParentStart="true" />

    <RadioButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rb3"
        android:checked="false"
        android:hint="Option 3"
        android:layout_below="@+id/rb2"
        android:layout_alignParentStart="true" />

    <RadioButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rb4"
        android:checked="false"
        android:hint="Option 4"
        android:layout_below="@+id/rb3"
        android:layout_alignParentStart="true" />
    </RadioGroup>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/b2"
        android:onClick="OnClickSubmit"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="00:00"
        android:id="@+id/txt3"
        android:layout_below="@+id/b1"
        android:layout_alignEnd="@+id/b1"
        android:hint="Time" />

</RelativeLayout>
