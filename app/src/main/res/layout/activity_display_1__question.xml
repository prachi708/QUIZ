<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.agarwalprachi.quiz.DISPLAY_1_QUESTION"
    android:background="@drawable/quiz25">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Paper Code "
        android:id="@+id/txt1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt2"
        android:hint="Paper code is"
        android:layout_alignTop="@+id/txt1"
        android:layout_toEndOf="@+id/txt3"
        android:editable="false"
        android:singleLine="false"
        android:textIsSelectable="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Question no."
        android:id="@+id/txt3"
        android:layout_alignTop="@+id/txt4"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt4"
        android:hint="Question no."
        android:layout_below="@+id/txt2"
        android:layout_toEndOf="@+id/txt13"
        android:editable="false"
        android:singleLine="false"
        android:textIsSelectable="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Question"
        android:id="@+id/txt5"
        android:layout_below="@+id/txt4"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt6"
        android:layout_below="@+id/txt5"
        android:layout_alignStart="@+id/txt3"
        android:layout_alignParentEnd="true"
        android:maxHeight="140dp"
        android:minHeight="100dp"
        android:editable="false"
        android:singleLine="false"
        android:textIsSelectable="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Options"
        android:id="@+id/txt7"
        android:layout_below="@+id/txt6"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt8"
        android:layout_below="@+id/txt7"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/txt4"
        android:hint="option1"
        android:editable="false"
        android:singleLine="false"
        android:textIsSelectable="false" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt9"
        android:layout_alignTop="@+id/txt8"
        android:layout_alignParentEnd="true"
        android:hint="option2"
        android:editable="false"
        android:singleLine="false"
        android:textIsSelectable="false" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt10"
        android:layout_below="@+id/txt8"
        android:layout_alignParentStart="true"
        android:hint="option3"
        android:editable="false"
        android:singleLine="false"
        android:textIsSelectable="false" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt11"
        android:layout_alignTop="@+id/txt10"
        android:layout_alignParentEnd="true"
        android:hint="option4"
        android:editable="false"
        android:singleLine="false"
        android:textIsSelectable="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Correct answer"
        android:id="@+id/txt12"
        android:layout_below="@+id/txt10"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt13"
        android:layout_below="@+id/txt12"
        android:layout_alignParentStart="true"
        android:hint="Answer is:"
        android:editable="false"
        android:singleLine="false"
        android:textIsSelectable="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:id="@+id/b1"
        android:layout_alignBottom="@+id/txt13"
        android:layout_alignEnd="@+id/txt6"
        android:onClick="OnClickOK" />
</RelativeLayout>
