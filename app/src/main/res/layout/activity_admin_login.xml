<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.agarwalprachi.quiz.ADMIN_LOGIN"
    android:id="@+id/aa"
    android:background="@drawable/quiz20">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Login Name"
        android:id="@+id/txt1"
        android:textColor="#ffffffff"
        android:textSize="20dp"
        android:typeface="serif"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Password"
        android:id="@+id/txt2"
        android:textColor="#ffffffff"
        android:textSize="20dp"
        android:typeface="serif"
        android:layout_marginTop="56dp"
        android:layout_below="@+id/txt1"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="180dp"
        android:layout_height="45dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/txt4"
        android:hint="Password"
        android:textColor="#ffffffff"
        android:typeface="serif"
        android:textColorHint="#ffffffff"
        android:textSize="20dp"
        android:singleLine="true"
        android:layout_alignTop="@+id/txt2"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ib1"
        android:background="@drawable/fwd3"
        android:onClick="OnclickAdminLogin"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="180dp"
        android:layout_height="45dp"
        android:id="@+id/txt3"
        android:layout_alignBottom="@+id/txt1"
        android:layout_alignEnd="@+id/txt4"
        android:hint="Login Name"
        android:textColorHint="#ffffffff"
        android:singleLine="true"
        android:textSize="20dp" />

</RelativeLayout>
