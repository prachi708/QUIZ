<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.agarwalprachi.quiz.UPDATE_QUESTION"
    android:background="@drawable/quiz25">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imb1"
        android:background="@drawable/fwd2"
        android:onClick="OnUpdate"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Type Question"
        android:id="@+id/txt1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColor="#ff0f15ff" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt2"
        android:layout_below="@+id/txt1"
        android:layout_alignParentStart="true"
        android:hint="Enter Question"
        android:maxHeight="180dp"
        android:maxLength="400"
        android:maxWidth="420dp"
        android:minHeight="180dp"
        android:minWidth="420dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Enter Options"
        android:id="@+id/txt3"
        android:layout_below="@+id/txt2"
        android:layout_alignParentStart="true"
        android:textColor="#ff0f15ff" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt4"
        android:layout_below="@+id/txt3"
        android:layout_alignParentStart="true"
        android:hint="Enter Option 1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt5"
        android:layout_below="@+id/txt3"
        android:layout_toEndOf="@+id/txt4"
        android:hint="Enter Option 2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt6"
        android:layout_below="@+id/txt4"
        android:layout_alignParentStart="true"
        android:hint="Enter Option 3" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt7"
        android:layout_below="@+id/txt4"
        android:layout_toEndOf="@+id/txt4"
        android:hint="Enter Option 4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Correct Option"
        android:id="@+id/txt8"
        android:layout_below="@+id/txt6"
        android:layout_alignParentStart="true"
        android:textColor="#ff0f15ff" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt9"
        android:layout_below="@+id/txt8"
        android:layout_alignParentStart="true"
        android:hint="Correct Option" />

</RelativeLayout>
